#!/bin/bash

# ‚úÖ SET THIS TO YOUR Railway Postgres URL
DATABASE_URL="your_database_url"

echo "üîó Connecting to $DATABASE_URL"

# Foreign-key-safe insert order
TABLES=(
  cinemas
  theaters
  movies
  customers
  staff
  screenings
  bookings
  seats
  tickets
  payments
)

for TABLE in "${TABLES[@]}"; do
  FILE="${TABLE}.csv"
  echo "üì§ Importing $FILE into $TABLE..."

  if [ -f "$FILE" ]; then
    psql "$DATABASE_URL" -c "\copy $TABLE FROM '$FILE' DELIMITER ',' CSV HEADER"
  else
    echo "‚ö†Ô∏è  File $FILE not found, skipping $TABLE."
  fi
done

echo "‚úÖ Done importing all tables!"